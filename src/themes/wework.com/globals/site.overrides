/*******************************
         Site Overrides
*******************************/

html.wf-loading {
  visibility: hidden;
}

html.wf-active,
html.wf-inactive {
  visibility: visible;
}

body {
  font-size-adjust: 0.508;
  font-weight: normal;
  font-style: normal;
}

#masthead .ui.logo {
  position: relative;
  top: -3px;
}

#masthead .ui.button {
  padding: 14px 27px;
  font-size: 12px;
}

#masthead nav .item {
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 12px;
}
